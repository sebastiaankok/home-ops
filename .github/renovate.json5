{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  ignorePaths: ["^archive/**"],
  prHourlyLimit: 10,
  extends: ["mergeConfidence:all-badges"],
  argocd: {
    fileMatch: ["^clusters/.+\\.ya?ml$"],
  },
  "helm-values": {
    fileMatch: ["^clusters/.+\\.ya?ml$"],
  },
  kubernetes: {
    fileMatch: ["^clusters/.+\\.ya?ml$"],
  },
  packageRules: [
    // Version strategies
    {
      matchDatasources: ["docker"],
      matchPackageNames: [
        "ghcr.io/onedr0p/plex",
      ],
      versioning: "loose",
    },
  ],
}
